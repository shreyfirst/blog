{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}
{{> header}}

<main class="main_minimal" role="main">
    {{#foreach posts}}
    <article class="card__project" role="article">

        {{#if feature_image}}
        <a href="{{url}}">
            <div class="card__hero-wrapper">
                <img class="card__hero-img"
                    srcset="{{img_url feature_image size="s"}} 300w,
                            {{img_url feature_image size="m"}} 600w,
                            {{img_url feature_image size="l"}} 1000w,
                            {{img_url feature_image size="xl"}} 2000w"
                    sizes="(max-width: 1000px) 400px, 700px"
                    src="{{img_url feature_image size="m"}}"
                    alt="{{title}}"
                />
            </div>
        </a>
        {{/if}}
        
        <div class="card__content-project">
            <header>
                <h2 class="card__title"><a href="{{url}}">{{title}}</a></h2>
            </header>
            <div class="card__desc-project">
                <a href="{{url}}">{{excerpt words="10"}}</a>
            </div>
        </div>

    </article>
    {{/foreach}}
</main>
{{pagination}}
{{> footer}}